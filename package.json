{
  "name": "ai",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev --workspace @ai/web",
    "dev:convex": "npm run dev --workspace @ai/backend",
    "build": "npm run build --workspace @ai/web",
    "lint": "npm run lint --workspace @ai/web",
    "typecheck": "npm run typecheck --workspace @ai/shared && npm run typecheck --workspace @ai/backend && npm run typecheck --workspace @ai/web"
  }
}

